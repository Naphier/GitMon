{
	"name": "GitMon",
	"version": "0.0.3",
	"description": "A simple GIT repository monitor widget to let you see you've not committed something or you need to pull in updates!",
	"main": "main.js",
	"author": "Naphier (Sean Mann)",
	"scripts": {
		"postinstall": "install-app-deps",
		"start": "npm install && electron .",
		"pack": "build --dir",
		"dist": "build"
	},
	"build": {
		"appId": "com.naplandgames.gitmon",
		"dmg": {
			"contents": [
				{
					"x": 110,
					"y": 150
				},
				{
					"x": 240,
					"y": 150,
					"type": "link",
					"path": "/Applications"
				}
			]
		},
		"win": {
			"target": "NSIS",
			"icon": "build/icon.ico"
		},
		"extraResources": [
			"extraResources/**/*"
		]
	},
	"keywords": [
		"tools",
		"source control",
		"windows",
		"git",
		"monitor",
		"widget"
	],
	"license": "ISC",
	"devDependencies": {
		"auto-launch": "^5.0.5",
		"electron": "^22.3.24",
		"electron-builder": "^24.0.0"
	},
	"dependencies": {
		"child_process": "^1.0.2",
		"electron-shortcut": "^0.5.0",
		"auto-launch": "^5.0.5"
	}
}
